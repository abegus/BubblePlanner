<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:weightSum="1"
    tools:context="gustafson.abe.bubbleplanner.addTask">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_bg2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:padding="5dp"
        android:layout_margin="10dp"
        android:id="@+id/relativeLayout2">
        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/round_button"
            android:gravity="center_vertical|center_horizontal"
            android:text="button1"
            android:textColor="#000000"
            android:id="@+id/button1"
            android:layout_gravity="center_horizontal"
            android:clickable="true"
            android:onClick="buttonPressed"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:textSize="12dp" />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/round_button_green"
            android:gravity="center_vertical|center_horizontal"
            android:text="button2"
            android:textColor="#000000"
            android:id="@+id/button2"
            android:layout_gravity="center_horizontal"
            android:clickable="true"
            android:onClick="buttonPressed"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:textSize="12dp" />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/round_button_orange"
            android:gravity="center_vertical|center_horizontal"
            android:text="button3"
            android:textColor="#000000"
            android:id="@+id/button3"
            android:layout_gravity="center_horizontal"
            android:clickable="true"
            android:onClick="buttonPressed"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:textSize="12dp" />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/round_button_purple"
            android:gravity="center_vertical|center_horizontal"
            android:text="button4"
            android:textColor="#000000"
            android:id="@+id/button4"
            android:layout_gravity="center_horizontal"
            android:clickable="true"
            android:onClick="buttonPressed"
            android:layout_below="@+id/button1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="12dp" />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/round_button_red"
            android:gravity="center_vertical|center_horizontal"
            android:text="button5"
            android:textColor="#000000"
            android:id="@+id/button5"
            android:layout_gravity="center_horizontal"
            android:clickable="true"
            android:onClick="buttonPressed"
            android:layout_below="@+id/button2"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:textSize="12dp" />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/round_button_yellow"
            android:gravity="center_vertical|center_horizontal"
            android:text="button6"
            android:textColor="#000000"
            android:id="@+id/button6"
            android:layout_gravity="center_horizontal"
            android:clickable="true"
            android:onClick="buttonPressed"
            android:layout_below="@+id/button3"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="12dp" />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/round_button_pink"
            android:gravity="center_vertical|center_horizontal"
            android:text="button7"
            android:textColor="#000000"
            android:id="@+id/button7"
            android:layout_gravity="center_horizontal"
            android:clickable="true"
            android:onClick="buttonPressed"
            android:layout_below="@+id/button4"
            android:layout_alignLeft="@+id/button4"
            android:layout_alignStart="@+id/button4"
            android:textSize="12dp" />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/round_button_lime"
            android:gravity="center_vertical|center_horizontal"
            android:text="button8"
            android:textColor="#000000"
            android:id="@+id/button8"
            android:layout_gravity="center_horizontal"
            android:clickable="true"
            android:onClick="buttonPressed"
            android:layout_below="@+id/button5"
            android:layout_alignLeft="@+id/button5"
            android:layout_alignStart="@+id/button5"
            android:layout_marginBottom="10dp"
            android:textSize="12dp" />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/round_button_blue"
            android:gravity="center_vertical|center_horizontal"
            android:text="button9"
            android:textColor="#000000"
            android:id="@+id/button9"
            android:layout_gravity="center_horizontal"
            android:clickable="true"
            android:onClick="buttonPressed"
            android:layout_below="@+id/button6"
            android:layout_alignLeft="@+id/button6"
            android:layout_alignStart="@+id/button6"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="12dp" />

    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/backButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:onClick="goBack"
        android:clickable="true"
        android:visibility="invisible" />

</RelativeLayout>
