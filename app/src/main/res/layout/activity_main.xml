            android:textColor="#fff"
            android:id="@+id/addTask"
            android:layout_gravity="center_horizontal"
            android:clickable="true"
            android:onClick="addTask"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textSize="12dp" />

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/round_button_dark"
            android:gravity="center_vertical|center_horizontal"
            android:text="Remove   Task"
            android:textColor="#fff"
            android:id="@+id/removeTask"
            android:layout_gravity="center_horizontal"
            android:clickable="true"
            android:onClick="removeTask"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="12dp" />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/round_button_dark"
            android:gravity="center_vertical|center_horizontal"
            android:text="Create Schedule"
            android:textColor="#fff"
            android:id="@+id/id1"
            android:layout_gravity="center_horizontal"
            android:clickable="true"
            android:onClick="createSchedule"
            android:layout_alignTop="@+id/addTask"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

